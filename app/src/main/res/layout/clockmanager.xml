<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#89eefe"
        >
        <ImageView
            android:id="@+id/clock_esc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_06"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="设置定时任务"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/clock_confirm"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_06"
            />

    </LinearLayout>
    <TimePicker
        android:id="@+id/clock_timerPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:background="#fff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            />
        <LinearLayout
            android:id="@+id/clock_reprition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_select_back"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定时类型"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/reprition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            />
        <LinearLayout
            android:id="@+id/clock_selectfacility"
            android:layout_width="match_parent"
            android:background="@drawable/button_select_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择设备"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/selectfacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            />
        <LinearLayout
            android:id="@+id/clock__running"
            android:layout_width="match_parent"
            android:background="@drawable/button_select_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运行时长"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            />
        <LinearLayout
            android:id="@+id/clock__colockname"
            android:layout_width="match_parent"
            android:background="@drawable/button_select_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定时组名称"
                android:padding="15dp"
                />
            <TextView
                android:id="@+id/colockname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"
            />
    </LinearLayout>
</LinearLayout>